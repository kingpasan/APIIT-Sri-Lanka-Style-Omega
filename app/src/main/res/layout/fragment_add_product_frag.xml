<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context="com.pasansemage.pasanmadurangasemagecb006067.mFragment.mSubFragments.addProduct_frag">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivLogoStyle"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:srcCompat="@drawable/styleomega_login_logo" />

            <EditText
                android:id="@+id/txtATitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/colorAccent"
                android:ems="10"
                android:hint="Product Title"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorAccent" />

            <Spinner
                android:id="@+id/spinnerProductCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorAccent"
                android:gravity="center"
                android:spinnerMode="dialog" />

            <EditText
                android:id="@+id/txtADescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/colorAccent"
                android:ems="10"
                android:hint="Description"
                android:inputType="textMultiLine"
                android:textAlignment="center"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorAccent" />

            <EditText
                android:id="@+id/txtAPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/colorAccent"
                android:ems="10"
                android:hint="Price"
                android:inputType="number"
                android:textAlignment="center"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorAccent" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Available Sizes :"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/colorAccent"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="S - Small Size"
                android:textColor="@color/colorAccent" />

            <CheckBox
                android:id="@+id/medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/colorAccent"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="M - Medium"
                android:textColor="@color/colorAccent" />

            <CheckBox
                android:id="@+id/large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorAccent"
                android:gravity="center"
                android:text="L - Large"
                android:textColor="@color/colorAccent" />

            <CheckBox
                android:id="@+id/xtralarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorAccent"
                android:gravity="center"
                android:text="XL - Xtra Large"
                android:textColor="@color/colorAccent" />

            <CheckBox
                android:id="@+id/doublexl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorAccent"
                android:gravity="center"
                android:text="XXL - Double Xtra Large"
                android:textColor="@color/colorAccent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivProductImage"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/dress" />

                <Button
                    android:id="@+id/btnChooseDress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_button"
                    android:text="Choose Dress"
                    android:textAlignment="center"
                    android:textColor="@color/colorText" />

            </LinearLayout>

            <Button
                android:id="@+id/btnAddProductInto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/round_button"
                android:text="Add Product"
                android:textColor="@color/colorText"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
